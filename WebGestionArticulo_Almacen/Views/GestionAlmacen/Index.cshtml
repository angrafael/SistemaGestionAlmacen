

@model IEnumerable<WebGestionArticulo_Almacen.Models.TableAlmacenes>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Almacen</h2>
<div class="container">
    <p>
        @Html.ActionLink("Agregar", "AgregarAlmacen", "GestionAlmacenController", new { @class = "btn btn-primary" })

    </p>
    <div class="panel panel-default">
        <div class="panel-heading">Información Armacén</div>
        <div class="panel-body">

            <table class="table table-striped table-responsive  table-sm" id="ListAlmacen">
                <thead>
                    <tr>
                        <th>
                            <label>Codigo</label>
                        </th>
                        <th>
                            <label>Nombre</label>
                        </th>
                        <th>
                            <label>Capacidad</label>
                        </th>
                        <th>
                            <label>Comentario</label>
                        </th>
                        <th>
                            <label>Estatus</label>
                        </th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.idalmacen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.capacidad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.comentario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.status)
                            </td>
                            <td>

                                @*@Html.ActionLink("Modificar", "modificarAlmacen", "GestionAlmacenController", new {IdAlmacen = item.idalmacen }, htmlAttributes: new { @class = "btn btn-primary" }) |*@
                                @Html.ActionLink("Modificar", "modificarAlmacen", new { IdAlmacen = item.idalmacen }, htmlAttributes: new { @class = "btn btn-success" }) |
                                @Html.ActionLink("Eliminar", "BorrarAlmacen", new { IdAlmacen = item.idalmacen }, htmlAttributes: new { @class = "btn btn-danger" })


                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
  </div>
</div>
        @section scripts{
            <script>
                $(document).ready(function () {
                    $('#ListAlmacen').DataTable({
                        language: {
                            url: '/Scripts/AjaxScripts/spanish.json'
                        }
                    });
                })

            </script>
        }








