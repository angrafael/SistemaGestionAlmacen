@model WebGestionArticulo_Almacen.Models.TableArticulo

@{
    ViewBag.Title = "modificar Articulo";
}

@using (Html.BeginForm())
{
    <div class="panel panel-default">
        <div class="panel-heading"><h2>Modificar Articulo</h2></div>
        <div class="panel-body">
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-10">
                        <label>Codigo</label> <br />

                        @Html.EditorFor(model => model.iditem, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <label>Descripcion</label> <br />

                        @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <label>Almacen</label>
                        @Html.DropDownList("idalmacen", ViewData["almacenes"] as SelectList, new { @idalmacen = "idalmacen", @class = "form-control" })

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <label>Cantidad Maxima </label>  <br />

                        @Html.EditorFor(model => model.maximo, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <label>Cantidad Minima</label> <br />

                        @Html.EditorFor(model => model.minimo, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="col-md-10">
                    <div class="form-group">
                        <label>Existencia</label> <br />

                        @Html.EditorFor(model => model.existencia, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <label>Costo</label> <br />

                        @Html.EditorFor(model => model.costo, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <label>Precio</label> <br />

                        @Html.EditorFor(model => model.precio, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <label>Precio Minimo</label> <br />

                        @Html.EditorFor(model => model.preciominimo, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <label>Descuento</label> <br />
                        @Html.EditorFor(model => model.itemdescuento, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <label>ITBIS</label> <br />

                        @Html.EditorFor(model => model.itbis, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <label>Vencimiento</label> <br />
                        <input type="date" name="vencimiento" id="vencimiento" class="form-control" value="vencimiento" required />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <label>Comentario</label> <br />
                        <textarea cols="20" htmlattributes="{ class = form-control }" id="comentario" value="comentario" name="comentario" rows="2" style="margin: 0px; width: 305px; height: 68px;"></textarea>

                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-12">
                        <label>Estado</label> <br />
                        <select id="status" name="status" size="1">
                            <OPTION VALUE="Activo">Activo</OPTION>
                            <OPTION VALUE="Inactivo">Inactivo</OPTION>
                        </select>

                    </div>
                </div>
            </div>
        </div>
        
    </div>
    <div class="form-group">
        @Html.ActionLink("Regresar", "IndexArticulo", "", new { @class = "btn btn-info " })
        <input id="btnGuard" type="submit" value="Guardar" class="btn btn-success pull-right" />


    </div>
}


